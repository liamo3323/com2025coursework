.container-center1
    .text-center
        %h1=t('.title')
        %p=t('.contact_us')

    = form_tag request_contact_path, method: 'post' do
        %p= label_tag :name, t('.name')
        %p= text_field_tag :name, '', title: t('.enter_name'), size: 20
        %br
        %p= label_tag :email, t('.email')
        %p= email_field_tag :email, '', title: t('.enter_email'), size: 30
        %br
        %p= label_tag :telephone, t('.telephone')
        %p= telephone_field_tag :telephone, '', title: t('.enter_telephone'), size: 30
        %br
        %p= label_tag :message, t('.message')
        %p= text_field_tag :message, '', title: t('.enter_message'), size: 70
        %br
        %p= submit_tag t('.submit')